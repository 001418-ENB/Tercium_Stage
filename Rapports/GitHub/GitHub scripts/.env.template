# .env.template – Exemple de configuration environnement

# Utilisateur SSH distant
REMOTE_USER=ubuntu

# IP publique ou nom DNS du serveur Infomaniak
REMOTE_HOST=1.2.3.4

# Port SSH (par défaut 22)
SSH_PORT=22

# Chemins distants de configuration
REMOTE_ETC=/etc/jitsi
REMOTE_OPT=/opt/jitsi

# Chemins distants pour les sauvegardes
REMOTE_BACKUP_ETC=/backup/etc
REMOTE_BACKUP_OPT=/backup/opt
