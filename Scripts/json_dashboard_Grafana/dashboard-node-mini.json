{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "CPU & RAM Mini",
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "panels": [
      {
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "100 - (avg by(instance)(rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
            "legendFormat": "CPU usage (%)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 9
        }
      },
      {
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory usage (%)",
            "refId": "B"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 9,
          "w": 24,
          "h": 9
        }
      }
    ]
  },
  "overwrite": true
}